@model Oblig1WebApp.Models.visAvgang

<h2>Endre avgang + detaljer</h2>

<div>
    @if (ViewBag.Endret == true)
    {
        <p class="alert alert-success">Endring av avgang + detaljer ble suksessfult endret!</p>
    }
