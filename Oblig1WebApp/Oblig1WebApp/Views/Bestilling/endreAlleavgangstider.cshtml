@model Oblig1WebApp.Models.alleavgangstid

<h2>Endring av avgangstider</h2>

<div>
    @if (ViewBag.Endret == true)
    {
        <p class="alert alert-success">Endring av avgangstid suksessfult endret!</p>
    }
    else if (ViewBag.Endret == false)
    {
        <p class="alert alert-danger">Endring av avgangstid feilet, prøv igjen!</p>
    }
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.avgangstid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.avgangstid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.avgangstid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.avgangstidRetur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.avgangstidRetur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.avgangstidRetur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lagre endringer" class="btn btn-success" /> |
                <input type="submit" value="Tilbake til avgangstider" formaction="/Bestilling/listAlleavgangstider" class="btn btn-dark" /> |
                <input type="submit" value="Tilbake til kontrollpanel" formaction="/Bruker/Kontrollpanel" class="btn btn-primary" />
            </div>
        </div>
    </div>
}