@model IEnumerable<Oblig1WebApp.Models.visAvgang>

@{
    ViewBag.Title = "Alle registrerte avganger + detaljer";
}

    <h2>Alle registrerte avganger + detaljer</h2>

<p>
    @Html.ActionLink("Registrer ny avgang + detaljer", "registrerVisAvgang")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.forsteAvgang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sisteAvgang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reiseTid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.spor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.togNummer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.forsteAvgang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sisteAvgang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reiseTid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.spor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.togNummer)
        </td>
        <td>
            @Html.ActionLink("Endre", "endreVisAvgang", new { id=item.id }) |
            @Html.ActionLink("Slett", "slettVisAvgang", new { id=item.id })
        </td>
    </tr>
}

</table>

<a href="/Bruker/Kontrollpanel"><input type="button" value="Tilbake til kontrollpanel" class="btn btn-primary" /></a>
