@model IEnumerable<Oblig1WebApp.Models.alleavgangstid>

@{
    ViewBag.Title = "Alle registrerte avgangstider";
}

<h2>Alle registrerte avgangstider</h2>

<p>
    @Html.ActionLink("Registrer ny avgangstid", "registreralleavgangstid")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.avgangstid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.avgangstidRetur)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.avgangstid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.avgangstidRetur)
            </td>
            <td>
                @Html.ActionLink("Endre", "endreAlleavgangstider", new { id = item.id }) |
                @Html.ActionLink("Slett", "slettalleavgangstid", new { id = item.id })
            </td>
        </tr>
    }

</table>

<a href="/Bruker/Kontrollpanel"><input type="button" value="Tilbake til kontrollpanel" class="btn btn-primary" /></a>